import os
from building import *

cwd = GetCurrentDir()
src = []
CPPPATH = [cwd]

if GetDepend(['CONFIG_REALTEK_BUILD_HML_DESIGNER']):
    # Application source
    src += ['app_hml_designer.c']
    
    # Romfs data (generated by designer)
    src += ['app_romfs.c']

objs = DefineGroup('hml_designer', src, depend=[''], CPPPATH=CPPPATH)

Return('objs')
