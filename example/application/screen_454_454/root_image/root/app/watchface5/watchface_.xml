
<screen>
<preview
file="app/watchface5/wf5preview.bin">
</preview>
    <img
            x="0"
            y="0"
            opacity="255"
            file="app/watchface5/w5w.bin"
            blendMode="imgBypassMode"
            >watchface
    </img>
    <img
            x="221"
            y="155"
            opacity="255"
            file="app/watchface5/w5hh.bin"
            blendMode="imgSrcOverMode"
            >hour_hand
            <onTime
                type="hour"
                to="hour_hand">
            </onTime>
    </img>
    <img
            x="221"
            y="89"
            opacity="255"
            file="app/watchface5/w5mh.bin"
            blendMode="imgSrcOverMode"
            >minute_hand
            <onTime
                type="minute"
                to="minute_hand">
            </onTime>
    </img>
    <img
            x="228"
            y="115"
            opacity="255"
            file="app/watchface5/w5sh.bin"
            blendMode="imgSrcOverMode"
            >second_hand
            <onTime
                type="second"
                to="second_hand">
            </onTime>
    </img>
    <img
            x="225"
            y="225"
            opacity="255"
            file="app/watchface5/w5m.bin"
            blendMode="imgSrcOverMode"
            >mask
            
    </img>
    <arc
        centerX="45"
        centerY="40"
        radius="20"
        strokeWidth="6"
        strokeColor="#FC8045"
        startAngle="-1.6"
        endAngle="3.14"
        clockwise="CW"
        cap="round">arc1
        <onPeripheral 
            type="activity" 
            to="arc1" 
            id="exercise">
        </onPeripheral>
        <textbox
            x="40"
            y="14"
            color="#FC8045"
            w="55"
            h="49"
            text="88"
            fontSize="24"
            font="app/watchface5/MichromaRegularSize24Bits4Font.bin"
            mode="center">txt_ex
           <onPeripheral 
                type="activity" 
                to="txt_ex" 
                id="exercise">
            </onPeripheral>
        </textbox>
    </arc>
 

    <textbox
            x="70"
            y="400"
            color="#FC8045"
            w="55"
            h="49"
            text="88"
            fontSize="24"
            font="app/watchface5/MichromaRegularSize24Bits4Font.bin"
            mode="center">txt_bat
           <onPeripheral 
                type="battery" 
                to="txt_bat" 
                id="capacity">
            </onPeripheral>
        </textbox>
 <chart
        w="70"
        h="40"
        x="320"
        y="15"
        color="#FC8045"
        items="100,200,100,0,110,50,150,100"
        max="200"
        min="0"  
        >chart1
        <onPeripheral 
                type="heart_rate" 
                to="chart1" 
                id="array">
            </onPeripheral>
            <textbox
            x="75"
            y="14"
            color="#FC8045"
            w="55"
            h="49"
            text="90"
            fontSize="24"
            font="app/watchface5/MichromaRegularSize24Bits4Font.bin"
            mode="center">txt_HR
           <onPeripheral 
                type="heart_rate" 
                to="txt_HR" 
                id="current">
            </onPeripheral>

            </textbox>
</chart>  
    <textbox
            x="0"
            y="255"
            color="white"
            w="454"
            h="24"
            text="SATURDAY"
            fontSize="24"
            font="app/watchface5/MichromaRegularSize24Bits4Font.bin"
            mode="center">txt_week
            <onTime
                type="MONDAY"
                to="txt_week"
                >
            </onTime>
    </textbox>
    <textbox
            x="0"
            y="285"
            color="white"
            w="454"
            h="24"
            text="12/MARCH"
            fontSize="16"
            font="app/watchface5/MichromaRegularSize16Bits4Font.bin"
            mode="center">txt_date
            <onTime
                type="1/JANUARY"
                to="txt_date"
                >
            </onTime>
    </textbox> 

</screen>
