    <!-- Rotate fast from: degree, x center, y center-->
    <animateTransform
            type="rotate"
            from="0 72 79"
            to="360 72 79"
            dur="1s"
            repeatCount="indefinite">animateRotate1
    </animateTransform>
    <!-- Rotate slow from: degree, x center, y center-->
    <animateTransform
        type="rotate"
        from="-45 72 79"
        to="45 72 79"
        dur="10s"
        repeatCount="indefinite">animateRotate2
    </animateTransform>
    <!-- Opacity from: opacity(0~255) -->
    <animateTransform
        type="opacity"
        from="255"
        to="100"
        dur="2s"
        repeatCount="indefinite">animateOpacity1
    </animateTransform>
    <!-- Scale  from: x rate, y rate, x center, y center-->
    <animateTransform
        type="scale"
        from="0.2 0.8 72 79"
        to="0.9 1.2 72 79"
        dur="4s"
        repeatCount="indefinite">animateScale1
    </animateTransform>
    <!-- translate  from: x, y-->
    <animateTransform
        type="translate"
        from="-40 0"
        to="40 300"
        dur="3s"
        pause = "pause"
        repeatCount="indefinite">animateTranslate1
    </animateTransform>
    <animateTransform
        type="translate"
        from="0 501"
        to="500 501"
        dur="3s"
        pause = "pause"
        repeatCount="indefinite">animateTranslate2
    </animateTransform>
    <animateTransform
        type="image frame"
        from="app\\box\\resource\\frame"
        to="app\\box\\resource\\frame"
        dur="10s"
        repeatCount="indefinite">animateFrame
    </animateTransform>
    <animateTransform
        type="image frame"
        from="app\\box\\resource\\frame"
        to="app\\box\\resource\\frame"
        dur="3s"
        repeatCount="indefinite">animateFrame2
    </animateTransform>
