{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug sdl_sim",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                { "name": "DEBUG_MODE", "value": "1" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "windows": {
                "program": "${workspaceFolder}\\sdl_sim.exe",
                "miDebuggerPath": "C:\\mingw64\\bin\\gdb.exe"
            },
            "linux": {
                "program": "${workspaceFolder}/sdl_sim",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "scons build"
        }
    ]
}
