{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "scons build",
            "command": "scons",
            "windows": {
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            },
            "linux": {
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "scons clean",
            "command": "scons",
            "args": ["-c"],
            "windows": {
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            },
            "linux": {
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
